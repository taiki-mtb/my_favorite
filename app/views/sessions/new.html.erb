<% provide(:title, "ログイン") %>
<div class="container">
  <h1>ログイン</h1>
  <div class="row">
    <div class="col-md-12">
      <%= form_with scope: :session, url:login_path, local: true do |f| %>
        <div class = 'form-group'>
          <%= f.label '名前' %>
          <%= f.text_field :name, class: 'form-control', id: 'user_name' %>
        </div>
        <div class = 'form-group'>
          <%= f.label 'パスワード' %>
          <%= f.password_field :password, class: 'form-control', id: 'user_password' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>ログインしたままにする</span>
          <% end %>
        </div>
        <%= f.submit 'ログイン', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>