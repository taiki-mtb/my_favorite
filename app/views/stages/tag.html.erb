<% provide(:title, "search") %>
<div class="container">
  <p>
    <%= "タグが - #{@tag.tag_name} - のstage一覧" %>
  </p>
  <div class="row search_result">
      <% @stages.each do |stage| %>
      <div class="search_image">
        <%= link_to image_tag("http://img.youtube.com/vi/#{stage.youtube_url}/hqdefault.jpg", class: "contents_image"), stage %>
        <%= link_to stage.name, stage, class: "result_name" %>
      </div>
      <% end %>
  </div>
</div>
