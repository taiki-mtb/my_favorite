<% provide(:title, "Edit_stage") %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
     <%= form_with model: @stage, local: true do |f| %>
       <%= render 'shared/error_messages', object: f.object %>
       <div class = 'form-group'>
         <%= f.label :name %>　<span class="input-need">※must</span>
         <%= f.text_field :name, class: 'form-control', id: 'stage_name' %>
       </div>
       <div class = 'form-group'>
         <%= f.label :info %>
         <%= f.text_field :info, size: "60x4", class: 'form-control', id: 'stage_info' %>
       </div>
       <div class = 'form-group'>
         <%= f.label :from_date %>
         <%= f.date_select :from_date, class: 'form-control', id: 'from_date' %>
       </div>
       <div class = 'form-group'>
         <%= f.label :until_date %>
         <%= f.date_select :until_date, class: 'form-control', id: 'until_date' %>
       </div>
       <div class = 'form-group'>
         <%= f.label :place %>
         <%= f.text_field :place, class: 'form-control', id: 'place' %>
       </div>
       <%= f.submit "更新する", class: 'btn btn-primary' %>
       <%= link_to "削除する", stage_path(@stage), method: :delete,
                               data: { confirm: "本当に削除してよろしいですか？" } %>
     <% end %>
    </div>
  </div>
</div>