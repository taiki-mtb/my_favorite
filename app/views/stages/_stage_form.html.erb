<%= form_with model: @stage, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class = 'form-group'>
    <%= f.label :name %>  <span class="input-need">※must</span>
    <%= f.text_field :name, class: 'form-control', id: 'stage_name' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :info %>
    <%= f.text_field :info, size: "60x4", class: 'form-control', id: 'stage_info' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :artists %>
    <%= f.text_field :artists, class: 'form-control', id: 'stage_artists' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :from_date %>
    <%= f.date_select :from_date, class: 'form-control', id: 'from_date' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :until_date %>
    <%= f.date_select :until_date, class: 'form-control', id: 'until_date' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :place %>
    <%= f.text_field :place, class: 'form-control', id: 'place' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :images %>
    <%= f.file_field :images, multiple: true, class: 'form-control', id: 'images' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :tag %>
    <%= f.text_field :tag_name,
                     placeholder: "タグを複数つけるには' , 'で区切ってください", 
                     class: 'form-control' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :list %>
    <%= f.text_field :list_name,
                     placeholder: "複数のリストに入れるには' , 'で区切ってください", 
                     class: 'form-control' %>
  </div>
  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>
