<%= form_with model: @music, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class = 'form-group'>
    <%= f.label :name %>  <span class="input-need">※must</span>
    <%= f.text_field :name, class: 'form-control', id: 'music_name' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :info %>
    <%= f.text_field :info, size: "60x4", class: 'form-control', id: 'music_info' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :date %>
    <%= f.date_select :date, class: 'form-control', id: 'music_date' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :youtube_url %>  <span class="input-need">※must</span>
    <%= f.text_field :youtube_url, class: 'form-control', id: 'music_youtube_url' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :tag %>
    <%= f.text_field :tag_name,
                     placeholder: "タグを複数つけるには' , 'で区切ってください", 
                     class: 'form-control' %>
  </div>
  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>