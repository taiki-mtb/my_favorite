<% provide(:title, "#{@dance.name}") %>
<% @comments = @dance.feed_comment(@dance.id) %>
<div class="container">
  <div class="row">
    <div class="col-12">
        <iframe width="100%" height="500px" src="https://www.youtube.com/embed/<%= @dance.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div class="col-12 edit-button">
      <div class="change-dance">
        <% if logged_in? %>
          <%= link_to "編集", edit_dance_path(@dance), class: 'edit-dance' %>　
        <% end %>
      </div>
    </div>
    <div class="col-12 contents-info">
      <h2 class="contents-name"><%= @dance.name %></h2>
      <h4><%= @dance.info %></h4>
      <div class="contents-date">
        <h5>動画投稿日：<%= @dance.date %></h5>
      </div>
      <p>
        #Tag: 
        <% @dance_tags.each do |tag| %>
          <%= link_to tag.tag_name, tag_dances_path(tag_id: tag.id) %>
        <% end %>
      </p>
      <p>
        #List: 
        <% @dance_lists.each do |list| %>
          <%= link_to list.list_name, "../lists/#{list.id}" %>
        <% end %>
      </p>
    </div>
    <div class="col-12 comment">
      <%= render "comments/feed_comments" %>
      <%= render "comments/new" %>
    </div>
    <div class="relate_contents">
      <% @dance_tags.each do |dance_tag| %>
        <% dance_tag.dances.each do |relate_dance| %>
          <% unless relate_dance === @dance %>
            <div class="relate_image">
              <%= link_to image_tag("http://img.youtube.com/vi/#{relate_dance.youtube_url}/mqdefault.jpg", class: "contents_image"), relate_dance %>
              <%= link_to relate_dance.name, relate_dance, class: "result_name" %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
