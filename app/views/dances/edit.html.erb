<% provide(:title, "Edit_dance") %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
     <%= form_with model: @dance, local: true do |f| %>
       <%= render 'shared/error_messages', object: f.object %>
       <div class = 'form-group'>
         <%= f.label :name %>　<span class="input-need">※must</span>
         <%= f.text_field :name, class: 'form-control', id: 'dance_name' %>
       </div>
       <div class = 'form-group'>
         <%= f.label :info %>
         <%= f.text_field :info, size: "60x4", class: 'form-control', id: 'dance_info' %>
       </div>
       <div class = 'form-group'>
         <%= f.label :date %>
         <%= f.date_select :date, class: 'form-control', id: 'dance_date' %>
       </div>
       <div class = 'form-group'>
         <%= f.label :youtube_url %>  <span class="input-need">※must</span>
         <%= f.text_field :youtube_url, class: 'form-control', id: 'dance_youtube_url' %>
       </div>
       <div class = 'form-group'>
         <%= f.label :tag %>
         <%= f.text_field :tag_name,
                          value: @tag_list,
                          placeholder: "タグを複数つけるには' , 'で区切ってください", 
                          class: 'form-control' %>
       </div>
       <div class = 'form-group'>
         <%= f.label :list %>
         <%= f.text_field :list_name,
                          value: @list_all,
                          placeholder: "複数のリストに入れるには' , 'で区切ってください", 
                          class: 'form-control' %>
       </div>
       <%= f.submit "更新する", class: 'btn btn-primary' %>
       <%= link_to "削除する", dance_path(@dance), method: :delete,
                               data: { confirm: "本当に削除してよろしいですか？" } %>
     <% end %>
    </div>
  </div>
</div>