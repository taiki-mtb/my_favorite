<% provide(:title) %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
        <iframe width="100%" height="600px" 
                src="https://www.youtube.com/embed/<%= "#{@random_movie.youtube_url}" %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div class="col-12">
      <%= link_to @random_movie.name, "/#{"#{@random_movie.class}".downcase}s/#{@random_movie.id}" %>
    </div>
  </div>
  <div class="col-12 contents_index">
    <div class="row">
    <% @movie.each_with_index do |movie, index| %>
      <div class="col-3">
        <%= link_to image_tag("http://img.youtube.com/vi/#{movie.youtube_url}/mqdefault.jpg", class: "contents_image"), "/#{"#{movie.class}".downcase}s/#{movie.id}" %>
        <%= link_to movie.name, "/#{"#{movie.class}".downcase}s/#{movie.id}", class: "contents_name" %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="col-12">
    <% @all_contents.each do |contents| %>
      <div>
        <% if contents == @dance && @music %>
          <%= contents.name %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
